<div class=userinfo>
	<div id="sign-in">
		<h1 id="title"> Sign-Up</h1>
		<p id="instructions">Please fill out the information below: </p>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user_input"}) do |f| %>
		  <%= devise_error_messages! %>
		
			<p>First Name: 	<%= f.text_field :first_name, autofocus: true %></p>
			  
			<p>Last Name 	<%= f.text_field :last_name, autofocus: true %></p>
			    
			<p>E-mail: 		<%= f.email_field :email, autofocus: true %></p>
			
			<p>Password: 	<% if @validatable %><% end %> <%= f.password_field :password, autocomplete: "off" %><i>(<%= @minimum_password_length %> characters minimum)</i></p>
			
			<p>Confirmation: <%= f.password_field :password_confirmation, autocomplete: "off" %><i>(repeat your password)</i></p>
			    
			<p>User Name:	<%= f.text_field :username, autofocus: true %></p>
			
			<p>Job Title: 	<%= f.text_field :job_title, autofocus: true %></p>
			    
			<p>Description:</p> 
			<div><%= f.text_area :description, autofocus: true, :size => "55x10"%></div>
			
			<div><%= f.submit "Sign up" %></div>
		<% end %>
	</div>
</div>	

